{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "sourceMap": true /* Generates corresponding '.map' file. */,
    "outDir": "./lib",
    "removeComments": true /* Do not emit comments to output. */,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
